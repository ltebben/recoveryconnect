extends layout

block content
  div.header
    h1 Dashboard
  div.dash
    div.resources
      h2 Resources
      div.column
    div.conversation
      h2 Your Conversation
      div.column
        table
          each val in messages
            tr
              td= val.date
              td= val.message
    div.blankfornow
      h2 Placeholder
      div.column


block append head
  link(rel="stylesheet", href="dashboard.css")
  link(href="https://fonts.googleapis.com/css?family=Roboto", rel="stylesheet")